  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true,
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib",
    "demo",
    "storybook",
    "./*.js",
    "jest.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
